<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/contentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:paddingBottom="80dp">

            <!-- ViewPager -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= Artist ================= -->

            <TextView
                android:id="@+id/artist_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_artist_label"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:gravity="end"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/viewPager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/artist_tags_container" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/artist_tags_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:chipSpacing="8dp"
                app:layout_constraintTop_toBottomOf="@id/viewPager"
                app:layout_constraintStart_toEndOf="@id/artist_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider_artist"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/artist_tags_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= Copyright ================= -->

            <TextView
                android:id="@+id/copyright_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_copyright_label"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:gravity="end"
                app:layout_constraintTop_toBottomOf="@id/divider_artist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/copyright_tags_container" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/copyright_tags_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:chipSpacing="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_artist"
                app:layout_constraintStart_toEndOf="@id/copyright_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider_copyright"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/copyright_tags_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= Character ================= -->

            <TextView
                android:id="@+id/character_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_character_label"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:gravity="end"
                app:layout_constraintTop_toBottomOf="@id/divider_copyright"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/character_tags_container" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/character_tags_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:chipSpacing="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_copyright"
                app:layout_constraintStart_toEndOf="@id/character_label"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                android:id="@+id/divider_character"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#33000000"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/character_tags_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ================= General ================= -->

            <TextView
                android:id="@+id/general_label"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/detail_tags_label"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:gravity="end"
                app:layout_constraintTop_toBottomOf="@id/divider_character"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/general_tags_container" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/general_tags_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:chipSpacing="8dp"
                app:layout_constraintTop_toBottomOf="@id/divider_character"
                app:layout_constraintStart_toEndOf="@id/general_label"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 来源按钮 (左下角小型FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:contentDescription="@string/detail_source_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- 收藏按钮 (右下角普通FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/star_off"
        android:contentDescription="@string/post_favorite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>